check process cf_consul
  with pidfile /var/vcap/sys/run/cf_consul/cf_consul.pid
  start program "/var/vcap/jobs/cf_consul/bin/monit_debugger cf_consul_ctl '/var/vcap/jobs/cf_consul/bin/cf_consul_ctl start'"
  stop program "/var/vcap/jobs/cf_consul/bin/monit_debugger cf_consul_ctl '/var/vcap/jobs/cf_consul/bin/cf_consul_ctl stop'"
  group vcap
